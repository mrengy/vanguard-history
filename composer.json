{
  "name": "mrengy/vanguard-history",
  "description": "Vanguard Music & Performing Arts History Site",

  "require": {
    "johnpbloch/wordpress": "5.8.*",
    "wp-cli/wp-cli-bundle": "*",
    "wpackagist-plugin/akismet": "*",
    "wpackagist-plugin/fix-image-rotation": "*",
    "wpackagist-plugin/show-current-template": "*",
    "wpackagist-plugin/wp-retina-2x": "*",
    "wpackagist-plugin/broken-link-checker": "*",
    "wpackagist-plugin/jetpack": "*",
    "wpackagist-plugin/advanced-custom-fields": "*",
    "wpackagist-plugin/media-library-assistant": "*",
    "wpackagist-plugin/duplicator": "*",
    "wpackagist-plugin/gravityformscli": "*",
    "wpackagist-plugin/restricted-site-access": "*"
  },
  "require-dev": {
    "wpackagist-plugin/query-monitor": "*",
    "wpackagist-plugin/wordpress-importer": "*"
  },
  "repositories":[
      {
          "type":"composer",
          "url":"https://wpackagist.org"
      },
      {
        "type"    : "package",
        "package" : {
          "name"    : "wordpress",
          "type"    : "webroot",
          "version" : "5.8.2",
          "dist"    : {
            "url"  : "https://github.com/WordPress/WordPress/archive/5.8.2.zip",
            "type" : "zip"
          },
          "source" : {
            "url"       : "https://github.com/WordPress/WordPress",
            "type"      : "git",
            "reference" : "5.8.2"
          },
          "require" : {
            "fancyguy/webroot-installer" : "1.0.0"
          }
        }
      }
  ],
  "autoload": {
      "psr-0": {
          "Acme": "src/"
      }
  },
  "config"      : {
      "vendor-dir": "content/vendor"
  },
  "extra" : {
    "installer-paths": {
      "content/plugins/{$name}/": ["type:wordpress-plugin"],
      "content/themes/{$name}/": ["type:wordpress-theme"]
    },
    "webroot-dir"     : "wp",
    "webroot-package" : "wordpress",
    "wordpress-install-dir": "wp"
  },
  "scripts": {
    "post-install-cmd":[
      "wp plugin activate gravityformscli && wp gf install --key=283af92393f339347c5e7f6aa889e0cc --activate"
    ],
    "post-update-cmd": [
      "wp plugin activate gravityformscli && wp gf update --key=283af92393f339347c5e7f6aa889e0cc"
    ]
  }
}
